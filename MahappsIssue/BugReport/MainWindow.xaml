<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource MahApps.Brushes.SystemControlHighlightListMedium}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Click="Button_Click" Margin="50" Padding="80,20" HorizontalAlignment="Left" FontSize="25" Content="Click Here to Reproduce Failure"/>
        <Border Grid.Row="1" Background="{DynamicResource MahApps.Brushes.Accent4}"/>
        <Border Grid.Row="2" Background="{DynamicResource MahApps.Brushes.Badged.Background}"/>
    </Grid>
</Window>
